@model Reserva

@{
    ViewData["Title"] = "Registro por id";
}

<a asp-action="Index" class="btn btn-sm btn-primary">Lista de dados</a>
<h2>@ViewData["Title"]</h2>

<h3>@ViewBag.StatusCode</h3>

<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input name="id" class="form-control"/>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-sm btn-primary">Obter Reserva</button>
    </div>
</form>

@* A estrutura de visualização do registro *@

<h2>Reserva Selecionada</h2>

@if (Model != null)
{
    <table class="table table-sm table bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Local de partida</th>
                <th>Local de chegada</th>
                <th>Data de Chegada</th>
                <th>Data de Partida</th>
                <th>Endereço de Hospedagem</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Nome</td>
                <td>@Model.Sobrenome</td>
                <td>@Model.PontoA</td>
                <td>@Model.PontoB</td>
                <td>@Model.DataChegada</td>
                <td>@Model.DataPartida</td>
                <td>@Model.EnderecoHospedagem</td>
            </tr>
        </tbody>
    </table>
}