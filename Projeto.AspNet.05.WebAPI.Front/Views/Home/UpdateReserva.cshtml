@model Reserva

@{
    ViewData["Title"] = "Atualizar Reserva";
}

<a asp-action="Index" class="btn btn-sm btn-secondary">Lista de Reservas</a>
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sobrenome">Sobrenome</label>
        <input asp-for="Sobrenome" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PontoA">Local de Partida</label>
        <input asp-for="PontoA" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PontoB">Local de Chegada</label>
        <input asp-for="PontoB" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataChegada">Data de Chegada</label>
        <input asp-for="DataChegada" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataPartida">Data de Partida</label>
        <input asp-for="DataPartida" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EnderecoHospedagem">Endereço de Hospedagem</label>
        <input asp-for="EnderecoHospedagem" type="text" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-sm btn-primary">
            Atualizar
        </button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Reserva Atualizada</h2>

    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Local de Partida</th>
                <th>Local de Chegada</th>
                <th>Data de Chegada</th>
                <th>Data de Partida</th>
                <th>Endereço de Hospedagem</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Nome</td>
                <td>@Model.Sobrenome</td>
                <td>@Model.PontoA</td>
                <td>@Model.PontoB</td>
                <td>@Model.DataChegada</td>
                <td>@Model.DataPartida</td>
                <td>@Model.EnderecoHospedagem</td>
            </tr>
        </tbody>
    </table>
}
